{
  "name": "mds",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "pnpm run format",
      "turbo run test"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "pnpm run format",
      "turbo run test"
    ],
    "*.json": [
      "pnpm run format"
    ]
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.32.3"
}
